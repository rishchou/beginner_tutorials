<launch>

  <arg 
    name="frequency" 
    default="10" 
  />
  
  <arg 
    name="record" 
    default= "false"
  />

  <node 
    pkg="beginner_tutorials" 
    name="talker" 
    type="talker"
    output="screen"
    args= "$(arg frequency)"
  />

  <node
    pkg="beginner_tutorials"
    name="listener"
    type="listener"
    output="screen"
    launch-prefix="gnome-terminal --command"
  />
  
  <node
    pkg="rosbag"
    name="rosbag_record_all"
    type="record"
    args="--all --output-name=$(find beginner_tutorials)/results/listener.bag"
    if="$(arg record)"
    />
</launch>

